{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ES2020",
    "target": "ES2021",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}